@*recebendo uma lista*@
@model List<MvcRazorViews.ViewModels.EstudanteViewModel>
@{
    ViewData["Title"] = "Estudantes";
}


@if(Model.Count == 0) 
{
    <p>Nenhum estudante cadastrado</p>
    <button>Cadastrar Estudante</button>
}
else 
{
    <h1>Estudantes</h1>
    <p>@Model.Count estudantes cadastrados</p>

    @*percorrendo e exibindo a lista*@
    @foreach(var estudante in Model)
    {
        <h3>
            <a href="/Estudante/Show/@estudante.Id">@estudante.Nome</a>   
        </h3>
        <p>@estudante.Endereco</p>

        @if(estudante.Ativo)
        {
            <button>Iniciar Conversa</button>
        }
        
        <hr>
    }
}


